#!/usr/bin/env python3
"""Enumerate all USB devices without opening them."""

import usb.core


def main():
    devices = usb.core.find(find_all=True)

    for device in devices:
        vendor_id = device.idVendor
        product_id = device.idProduct
        bus = device.bus
        address = device.address

        print(f"Bus={bus:03d} Address={address:03d} " f"VID:PID={vendor_id:04x}:{product_id:04x}")


if __name__ == "__main__":
    main()
